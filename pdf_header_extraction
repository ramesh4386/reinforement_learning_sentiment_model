#pip install pdfminer.six  
import pandas as pd  
from pdfminer.high_level import extract_pages  
from pdfminer.layout import LTTextContainer, LTChar, LTAnno  
  
def extract_text_info(file_path):  
    data = []  
  
    for page_num, page_layout in enumerate(extract_pages(file_path), start=1):  
        for element in page_layout:  
            if isinstance(element, LTTextContainer):  
                for text_line in element:  
                    text = ""  
                    font_size = 0  
                    space_up = 0  
                    space_down = 0  
                    space_front = 0  
                    space_back = 0  
                    for character in text_line:  
                        if isinstance(character, LTChar):  
                            font_size = character.size  
                            space_up = character.space_up  
                            space_down = character.space_down  
                            space_front = character.space_front  
                            space_back = character.space_back  
                            break  
  
                    for character in text_line:  
                        if isinstance(character, (LTChar, LTAnno)):  
                            text += character.get_text()  
  
                    data.append({  
                        "text": text,  
                        "font_size": font_size,  
                        "space_up": space_up,  
                        "space_down": space_down,  
                        "space_front": space_front,  
                        "space_back": space_back,  
                        "page_num": page_num  
                    })  
  
    return pd.DataFrame(data)  
  
file_path = "path/to/your/pdf/file.pdf"  
df = extract_text_info(file_path)  
print(df)  

